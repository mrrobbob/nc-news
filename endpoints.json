{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [
      "author",
      "topic",
      "sort_by",
      "order"
    ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of one selected article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 11
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for one article",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
            "comment_id": 11,
            "body": "Ambidextrous marsupial",
            "votes": 0,
            "author": "icellusedkars",
            "article_id": 3,
            "created_at": "2020-09-19T23: 10: 00.000Z"
        },
        {
            "comment_id": 10,
            "body": "git push origin master",
            "votes": 0,
            "author": "icellusedkars",
            "article_id": 3,
            "created_at": "2020-06-20T07: 24: 00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment and serves it back",
    "queries": [],
    "exampleRequest": {
      "username" : "default dan",
      "body": "hit the floor"
    },
    "exampleResponse": {
      "comment_id": 14,
      "body": "my opinion",
      "votes": 0,
      "author": "butter_bridge",
      "article_id": 3,
      "created_at": "2024-02-20T07: 24: 00.000Z"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "modifies number of votes on an article and serves it back",
    "queries": [],
    "exampleRequest": {
      "inc_votes": -10
    },
    "exampleResponse": {
      "article_id": 1,
      "title": "Living in the shadow of a great man",
      "topic": "mitch",
      "author": "butter_bridge",
      "body": "I find this existence challenging",
